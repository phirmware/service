<% include ./partials/header %>

<style>
  a{      
      color:black;
      }
  a:hover{
      color:black;
      text-decoration:none;
      }
  .list-group-item:hover{
      background:lightblue;
      transition:0.5s;
      }
  .list-group-item:active{
      background:black;
      color:white;
      text-decoration:none;
      }
   #card{
      width:22%;
      }
    .jumbotron{
        background:blue;
    }

   @media screen and (max-width: 780px) {
        #card {
            width:45%;
            float:left;
    }
}
    @media screen and (max-width: 320px) {
        #card {
            width:100%;
            float:left;
    }
}
</style> 

<div class="jumbotron">
  <h2 style="text-align:center;color:white"><b><%= category %></b></h2>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
        <div class="ui cards">
             <% for(var i = 0 ;i<foundCategory[0].user.length;i++){ %>
                <div class="ui card" id="card">
                <div class="image" style="height:60%">
                <img src="/uploads/<%= foundCategory[0].user[i].image %>" alt="add icon image" style="height:100%">
              </div>
                <div class="content">
                    <div class="center aligned header"><%= foundCategory[0].user[i].user %></div>
                    <div class="center aligned description">
                       <a href="/user/<%= foundCategory[0].user[i]._id %>" class="btn btn-primary"><p>more</p></a>
                    </div>
                   </div>
                </div>
             <% } %>
            </div>
            <br>
            <a href="/" class="btn btn-danger">go back</a>
        </div>
    </div>
    <br>
    <br>
    <% if(!currentuser){ %>
       <div></div>
    <% } else{ %>
        <div class="row">
        <div class="col-lg-12">
          <form action="/category/<%= category %>/newuser/<%= pos %>" method="POST" class="form-group" style="margin:0px auto;width:60%;">
              <h2 style="text-align:center">Add Yourself to category</h2>
              <button class="btn btn-info" style="width:100%">Add</button>
          </form>
        </div>
        </div>
    <% } %>
</div>

<% include ./partials/footer %>